<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.habits.activities.RemindMe_Activity">

    <ProgressBar
        android:id="@+id/fiveSecondsPb"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="325dp"
        android:layout_height="325dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="92dp"
        android:progress="100"
        android:progressDrawable="@drawable/circle_progress_bar"
        android:rotation="270"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/overallPb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/taskTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="128dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/overallPb" />

    <Button
        android:id="@+id/fiveSecondsBtn"
        android:layout_width="120dp"
        android:layout_height="72dp"
        android:layout_marginLeft="104dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="124dp"
        android:text="START"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/fiveSecondsPb"
        app:layout_constraintTop_toTopOf="@+id/fiveSecondsPb" />

    <LinearLayout
        android:id="@+id/nextElementContainer"
        android:layout_width="344dp"
        android:layout_height="78dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fiveSecondsPb"></LinearLayout>


</android.support.constraint.ConstraintLayout>
